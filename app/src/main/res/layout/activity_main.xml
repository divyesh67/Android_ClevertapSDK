<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Welcome to Demo App(Divyesh)"
        android:textColor="#191703"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textv"
        android:layout_marginTop="10dp"
        android:background="#DBF2F4"
        android:text="Create User Profile"
        android:textStyle="italic" />

    <Button
        android:id="@+id/pushnotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/createuser"
        android:layout_marginTop="10dp"
        android:background="#DBF2F4"
        android:text="Push notification"
        android:textStyle="italic" />

    <Button
        android:id="@+id/appinbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pushnotification"
        android:layout_marginTop="10dp"
        android:background="#DBF2F4"
        android:text="App in box"
        android:textStyle="italic" />

    <Button
        android:id="@+id/getmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appinbox"
        android:layout_marginTop="10dp"
        android:background="#DBF2F4"
        android:text="Get message"
        android:textStyle="italic" />

    <Button
        android:id="@+id/inappnotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getmsg"
        android:layout_marginTop="10dp"
        android:background="#DBF2F4"
        android:text="Get In app notification"
        android:textStyle="italic"
        app:rippleColor="#E11515" />

    <Button
        android:id="@+id/nativedisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inappnotif"
        android:layout_marginTop="164dp"
        android:background="#DBF2F4"
        android:text="Native Display"
        android:textStyle="italic" />

    <Button
        android:id="@+id/inboxcount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inappnotif"
        android:layout_marginTop="14dp"
        android:background="#DBF2F4"
        android:text="Inbox count"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtinbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inboxcount"
        android:layout_marginTop="16dp"
        android:background="#DBF2F4"
        android:text="Total inbox count: "
        android:textStyle="italic" />

    <Button
        android:id="@+id/delinbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inappnotif"
        android:layout_marginTop="109dp"
        android:background="#DBF2F4"
        android:text="Del inbox"
        android:textStyle="italic" />


    <androidx.cardview.widget.CardView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nativedisp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/titlem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nativedisp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titlem"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>